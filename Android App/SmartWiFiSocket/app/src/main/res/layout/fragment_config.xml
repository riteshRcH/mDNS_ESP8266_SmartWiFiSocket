<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="in.co.unifytech.socket.SmartWiFiSocketActivity">

    <TextView
        android:text="@string/internet_mode"
        android:gravity="center"
        android:textStyle="bold"
        android:maxLines="1"
        android:textSize="22sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/btnGoogleSignIn"
        android:visibility="visible"
        android:layout_marginTop="11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnAfterGoogleSignIn"
        android:visibility="gone"
        android:textAllCaps="false"
        android:layout_marginTop="11dp"
        android:background="@drawable/rounded_corner_button"
        android:textColor="@android:color/white"
        android:text="@string/btn_after_google_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnInternetModeConfig"
        android:text="@string/btn_internet_mode_not_configured"
        android:textAllCaps="false"
        android:layout_marginTop="11dp"
        android:padding="5dp"
        android:background="@drawable/rounded_corner_button"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnRemoveInternetModeConfig"
        android:text="@string/btn_remove_internet_mode_config"
        android:textAllCaps="false"
        android:layout_marginTop="11dp"
        android:padding="5dp"
        android:background="@drawable/rounded_corner_button"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
