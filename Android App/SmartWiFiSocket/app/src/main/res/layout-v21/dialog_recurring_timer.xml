<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <TableRow
            android:layout_weight="1.0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="start"
                android:layout_weight="0.1"
                android:text="@string/recurrence_range_1"/>

            <CheckBox
                android:id="@+id/chkBoxApplyRecurrenceTimerDateRange"
                android:text="@string/apply_recurrence_date_range"
                android:checked="false"
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </TableRow>

        <DatePicker
            android:id="@+id/datePickerRecurringTimerStartDate"
            android:datePickerMode="spinner"
            android:visibility="gone"
            android:calendarViewShown="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtViewShowRecurrenceTimerToMsg"
            android:text="@string/recurrence_range_to"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <DatePicker
            android:id="@+id/datePickerRecurringTimerEndDate"
            android:datePickerMode="spinner"
            android:visibility="gone"
            android:calendarViewShown="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:text="@string/select_days_of_week_to_run_on_2"/>

        <TableRow android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1.0">

            <ToggleButton
                android:id="@+id/toggleBtnRecurringTimerMo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:textOn="@string/Monday"
                android:textOff="@string/Monday"/>

            <ToggleButton
                android:id="@+id/toggleBtnRecurringTimerTu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:textOn="@string/Tuesday"
                android:textOff="@string/Tuesday"/>

            <ToggleButton
                android:id="@+id/toggleBtnRecurringTimerWe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:textOn="@string/Wednesday"
                android:textOff="@string/Wednesday"/>

            <ToggleButton
                android:id="@+id/toggleBtnRecurringTimerTh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:textOn="@string/Thursday"
                android:textOff="@string/Thursday"/>

        </TableRow>

        <TableRow android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:layout_weight="1.0">

            <ToggleButton
                android:id="@+id/toggleBtnRecurringTimerFr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:textOn="@string/Friday"
                android:textOff="@string/Friday"/>

            <ToggleButton
                android:id="@+id/toggleBtnRecurringTimerSa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:textOn="@string/Saturday"
                android:textOff="@string/Saturday"/>

            <ToggleButton
                android:id="@+id/toggleBtnRecurringTimerSu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:textOn="@string/Sunday"
                android:textOff="@string/Sunday"/>

            <ToggleButton
                android:id="@+id/toggleBtnRecurringTimerAllDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:textOn="@string/all_days"
                android:textOff="@string/all_days"/>

        </TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:text="@string/select_recurring_time_3"/>

        <TimePicker
            android:id="@+id/timePickerRecurringTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:text="@string/before_starting_timer_turn_appliance_4"/>

        <ToggleButton
            android:id="@+id/toggleBtnRecurringTimerBeforeState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:checked="true"
            android:textOff="@string/stateOFF"
            android:textOn="@string/stateON"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:text="@string/then_run_timer_for_following_duration_5"/>

        <mobi.upod.timedurationpicker.TimeDurationPicker
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/timeDurationPickerRecurringTimer"
            android:layout_gravity="center_horizontal"
            app:numPadButtonPadding="0dp"
            app:timeUnits="hhmmss"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:id="@+id/txtViewRecurringTimerAfterStateMsg"
            android:text="@string/after_timer_expires_turn_appliance_6"/>

    </LinearLayout>
</ScrollView>